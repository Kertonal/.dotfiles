#!/usr/bin/env bash

config_file=~/.tmux-sessionizer

if [[ ! -f "$config_file" ]]; then
    echo "File .tmux-sessioner does not exist."

    exit 1
fi

directories=$(cat $config_file | tr "\n" " ")

selected=$(find $directories -maxdepth 1 -mindepth 1 \( -type d -o -type l \) | fzf)

if [ -z "$selected" ]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -ds $selected_name -n nvim -c $selected "nvim ."
    tmux new-window -d -n zsh -t $selected_name -c $selected
    tmux a

    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -n nvim -c $selected "nvim ."
    tmux new-window -d -n zsh -t $selected_name -c $selected
fi

tmux switch-client -t $selected_name
